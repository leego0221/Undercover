<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="backbutton"
        android:backgroundTint="#00000000"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_gravity="top"
            android:id="@+id/text1"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="여행지를\n선택해주세요!"
            android:textColor="@color/main_color"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="여행 일수를\n선택해주세요!"
            android:textColor="@color/main_color"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="여행 경비를\n선택해주세요!"
            android:textColor="@color/main_color"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text4"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="모험을\n떠나시겠습니까?"
            android:textColor="@color/main_color"
            android:textSize="40dp"
            android:textStyle="bold" />




    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="35dp">

        <Spinner
            android:id="@+id/spn_SPNList"
            android:background="@drawable/spinner_background"
            android:layout_gravity="bottom"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:paddingRight="30dp"
            android:popupBackground="#2540FF"
            android:spinnerMode="dialog"
            android:paddingLeft="15dp"
            android:theme="@style/SpinnerTheme">
        </Spinner>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame1"
        android:visibility="invisible"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <SeekBar
            android:id="@+id/day_seekbar"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:thumbTint="@color/main_color"
            android:max="4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당일치기"
            android:layout_marginTop="40dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4Days"
            android:layout_marginTop="40dp"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/seekbar1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:layout_gravity="center"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame2"
        android:visibility="invisible"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <SeekBar
            android:id="@+id/money_seekbar"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:thumbTint="@color/main_color"
            android:max="1000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가성비 여행"
            android:layout_marginTop="40dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flex"
            android:layout_marginTop="40dp"
            android:layout_gravity="right" />
        <TextView
            android:id="@+id/seekbar2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:layout_gravity="center"/>


    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/get_button"
            android:visibility="invisible"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/main_color"
            android:text="생성하기"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/button_round"
            android:textColor="@color/white"/>
    </FrameLayout>






</LinearLayout>